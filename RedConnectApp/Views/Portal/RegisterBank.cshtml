@using RedConnect.ViewModels
@model BloodBankViewModel

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<h2>Create Blood Bank</h2>

<form asp-action="RegisterBank" method="post">

    <div>
        <label>Location Name</label>
        <input asp-for="LocationName" class="form-control" />
    </div>

    <div>
        <label>Address</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div>
        <label>Staff Email</label>
        <input asp-for="StaffEmail" class="form-control" />
        <span asp-validation-for="StaffEmail" class="text-danger"></span>
    </div>

    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <div>
        <label>User Type</label>
        <select asp-for="SelectedUserTypeId"
                asp-items="@(new SelectList(Model.UserTypes, "UserTypeId", "UserTypeName"))"
                class="form-control">
            <option value="">-- Select User Type --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>