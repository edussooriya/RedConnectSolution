@model List<RedConnect.ViewModels.DonorListViewModel>

<h2>Donor List (UserType = 0)</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Name</th>
            <th>Blood Group</th>
            <th>Location</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donor in Model)
        {
            <tr>
                <td>@donor.UserId</td>
                <td>@donor.Name</td>
                <td>@donor.BloodGroup</td>
                <td>@donor.LocationText</td>
                <td>
                    @if (donor.Verified)
                    {
                        <span style="color:green;">✅ Verified</span>
                    }
                    else
                    {
                        <span style="color:red;">❌ Not Verified</span>
                    }
                </td>
                <td>
                    @if (!donor.Verified)
                    {
                        <form asp-action="Verify" method="post" asp-controller="Portal">
                            <input type="hidden" name="userId" value="@donor.UserId" />
                            <button type="submit" class="btn btn-success btn-sm">
                                Verify
                            </button>
                        </form>
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>